<% layout('boilerplate') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 profile">
      <img src="<%= user.profile.picture %>" alt="<%= user.profile.name %>" class="img-circle img-responsive img-center">
      <br>
      <p>Name: <%= user.profile.name %></p>
      <p>Email: <%= user.email %></p>
      <% if (user.address === "" || typeof user.address === 'undefined') { %>
        <p>Address: You have no address</p>
      <% } else  { %>
        <p>Address: <%= user.address %></p>
      <% } %>

      <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>
    <div class="col-md-6 table-responsive payment-history">
      <h2 class="text-center">History</h2>
      <table class="table table-striped sticky-header">
        <thead>
          <tr>
            <th>Item's Name: </th>
            <th>Paid: </th>
          </tr>
          <tbody>
              <% for(var i = 0; i < user.history.length; i++) { %>
                <tr>
                  <td><%= user.history[i].item.name %></td>
                  <td><%= user.history[i].paid %></td>
                </tr>
              <% } %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
